<%- include ../Partials/header.ejs %>
<%- include ../Partials/main_nav.ejs %>
<div class="container">
    <div class="row">
        <div class="offser-md-3 col-md-6">
            <h1><%= title %></h1>
            <form class="form" method="POST">
                <div class="form-group">
                    <label for="nameTextField">Task Title</label>
                    <input type="text" class="form-control" id="nameTextField"
                    placeholder="Enter the Task Title" name="Name" value="<%= Task.Name %>" required>
                </div>
                <div class="form-group">
                    <label for="descriptionTextArea">Task Description</label>
                    <textarea type="text" class="form-control" id="descriptionTextArea" 
                    placeholder="Enter Task Description" name="Description" required><%= Task.Description %></textarea>
                </div>
                <div class="form-group">
                    <label for="publishedTextField">Deadline</label>
                    <input type="text" class="form-control" id="publishedTextField"
                    placeholder="Enter the date of the deadline eg. (YYYY-MM-DD)" name="Deadline" value="<%= Task.Deadline %>" required>
                </div>
                <button class="btn btn-primary" type="submit">Submit <i class="fas fa-edit"></i></button>
                <button class="btn btn-warning" type="button" onclick="window.location.href='/tasklist'">Cancel <i class="fas fa-undo"></i></button>
            </form>
        </div>
    </div>
</div>
<%- include ../Partials/footer.ejs %>