<%- include ../Partials/header.ejs %>
<%- include ../Partials/main_nav.ejs %>
<main class="container">
    <div class="row">
        <div class="offset-md-1 col-md-10">
            <h1><%= title %></h1>
            <br>
            <% if(typeof displayName=='string' && displayName) { %>
            <a href="/add" class="btn btn-primary" role="button"> Add Task</a>
            <% } %>
        <div class="table-container">
            <table class="table table-bordered table-striped table-hover">
                <!--Table Header-->
                <% if (typeof displayName=='string' && displayName) { %>
                    <tr class="d-flex">
                        <th class="text-center col-2">Name</th>
                        <th class="col-6">Description</th>
                        <th class="text-center col-2">Deadline</th>
                    </tr>
                    <% for(let count=0;count<TaskList.length;count++) { %>
                        <tr class="d-flex">
                            <td class="text-center col-2"><%= TaskList[count].Name %></td>
                            <td class="col-6"><%= TaskList[count].Description %></td>
                            <td class="text-center col-2"><%= TaskList[count].Deadline %></td>
                            <% if(typeof displayName=='string' && displayName) { %>
                            <td class="text-center col-1"><a href="/edit/<%= TaskList[count]._id %>" class="btn btn-primary btn-sm"><i class="fas fa-pencil-alt"></i> Edit</a></td>
                            <td class="text-center col-1"><a href="/delete/<%= TaskList[count]._id %>" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i> Delete</a></td>
                            <% } %>
                        </tr>
                    <% } %>
                <% } else { %>
                    <tr class="d-flex">
                        <th class="text-center col-3">Name</th>
                        <th class="col-6">Description</th>
                        <th class="text-center col-3">Deadline</th>
                    </tr>
                    <tr>
                        <td colspan="3" class="text-center">Login/Sign-up to see, edit and create new tasks.</td>
                    </tr>
                <% } %>
            </table>
        </div>
        </div>
    </div>
</main> 
<%- include ../Partials/footer.ejs %>