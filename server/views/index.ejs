<%- include Partials/header.ejs %>
<%- include Partials/main_nav.ejs %>
<main class="container">
  <div class="row">
    <div class="offset-md-1 col-md-10 message-container">
      <h1>Welcome to Stay In Check!</h1>
      <p>
      
      Stay in Check is your go-to task management solution, 
      designed to streamline your workflow and boost productivity. 
      Whether you're managing personal tasks, collaborating on projects, 
      or juggling multiple responsibilities, 
      Stay in Check offers a user-friendly interface that helps you stay organized and on top of your commitments. 
      Our platform ensures that you and your team can focus on what matters most. 
      Empower your day-to-day operations and achieve your goals effortlessly with Stay in Checkâ€”where productivity meets simplicity.
      
      </p>
    </div>
  </div>
  <div class="row">
    <div class="offset-md-1 col-md-10 table-container">
      <table class="table table-bordered table-striped table-hover">
        <!--Table Header-->
        <tr class="d-flex">
          <th class="text-center col-3">Name</th>
          <th class="col-6">Description</th>
          <th class="text-center col-3">Deadline</th>
        </tr>
        <% if (typeof displayName=='string' && displayName) { %>
          <% for (let count = 0; count < TaskList.length; count++) { %>
            <tr class="d-flex">
              <td class="text-center col-3"><%= TaskList[count].Name %></td>
              <td class="col-6"><%= TaskList[count].Description %></td>
              <td class="text-center col-3"><%= TaskList[count].Deadline %></td>
            </tr>
          <% } %>
        <% } else { %>
          <tr>
            <td colspan="3" class="text-center">Login/Sign-up to see, edit and create new tasks.</td>
          </tr>
        <% } %>



      </table>
    </div>
  </div>
</main>
<%- include Partials/footer.ejs %>